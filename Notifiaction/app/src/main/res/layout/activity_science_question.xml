            android:id="@+id/questionMath"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/robotoslabregular"
            android:gravity="start"
            android:text="Which river among the following starts its Journey and ends its journey in India itself?"
            android:textSize="@dimen/my_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/answerRecyclerviewMath"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/questionLabelMath"
            app:layout_constraintVertical_bias="0.186"
            tools:ignore="MissingConstraints" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/answerRecyclerviewMath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="50dp"
